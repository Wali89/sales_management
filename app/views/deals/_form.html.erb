<%= form_for(@deal) do |f| %>

  <div class="form-group">
    <%= f.label :amount %><br>
    <%= f.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form control", step: :any %>
  </div> 

  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: "form control" %>
  </div> 

  <div class="form-group">
    <%= f.label :item_id %><br>

    <%= collection_select(:item_id, :name, User.all, :name, :name, prompt: "Please select item") %>
  </div> 




<% end %>