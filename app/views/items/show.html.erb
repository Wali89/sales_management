$(function() {
  $(".js-more").on("click", function() {
    var id = $(this).data("id");
    $.get("/deals/" + id + ".json", function(data) {
      var deal = data;
      var descriptionText = "<p>" + deal["message"] + "</p>";
      $("#deal-" + id).html(descriptionText);
    });
  });

  $("a.load_deals").on("click", function(e){
    $get(this.href).success(function(json){
