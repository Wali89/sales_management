<h1>All Items</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @items.each do |item| %>
      <tr>

      <td><%= link_to "#{item.name}", item_path(item) %></td>
        <td><%= item.category %></td>
        <td><%= item.description %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= link_to "Sales #{item.name}", item_path(item) %></td>
        <td><% if current_user.admin %>
          <%= link_to 'Edit Item', [:edit, item] %> 
        <% end %><td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user.admin %>
  <p><%= link_to 'Create New Item', new_item_path %></p>

<% end %>